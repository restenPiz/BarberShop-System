
@{
    ViewBag.Title = "Editar_corte";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@model Fabio_managment_system.Models.Corte

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Adicionar Funcionario</h4>
            <form action="/Corte/Actualizar_corte" method="post">

                @Html.HiddenFor(model => model.Id_corte)

                <div class="form-group">
                    <label for="exampleInputName1">Nome da viatura</label>
                    <input type="text" class="form-control" id="exampleInputName1" value="@Model.Nome" name="Nome">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Codigo da Viatura</label>
                    <input type="int" class="form-control" id="exampleInputEmail3" value="@Model.Preco" name="Preco">
                </div>
                <input type="submit" class="btn btn-gradient-primary mr-2">
            </form>
        </div>
    </div>
