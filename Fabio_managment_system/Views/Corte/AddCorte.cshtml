
@{
    ViewBag.Title = "AddCorte";

    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Adicionar Corte</h4>
            <form action="/Corte/Adicionar_corte" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Nome</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Nome da Viatura" name="Nome">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Preco</label>
                    <input type="number" class="form-control" id="exampleInputEmail3" placeholder="Codigo" name="Preco">
                </div>
                <input type="submit" class="btn btn-gradient-primary mr-2">
            </form>
        </div>
    </div>
